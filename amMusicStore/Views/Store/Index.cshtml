@model IEnumerable<amMusicStore.Models.Genre>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Store</h2>

<h3>Click any Genre to view our Albums</h3>
<ul>
   @foreach(var g in Model)
   {
       //<li>@g.Name</li>
       //<li>@g.Name</li>
      <li>@Html.ActionLink(g.Name, "Details", "Store", new { genre = g.Name }, null)</li>
   }
</ul>

